{% extends '@Freelance/layout.html.twig' %}

{% block title %}Вход{% endblock %}

{% block body %}
    <div class="container" style="width: 35%;">
        <div class="page-header">
            <h1 align="center">Вход</h1>
        </div>
        <div class="row">
            <div class="col-md-12">
                <form action="{{ path('freelance_login_check') }}" method="post" class="form-horizontal" style="text-align: center">
                    {% if error %}
                        <div class="alert alert-warning alert-dismissible fade in" role="alert">
                            <button class="close" aria-label="Close" data-dismiss="alert" type="button">
                                <span aria-hidden="true">×</span>
                            </button>
                            {{ error.messageKey|trans(error.messageData) }}
                        </div>
                    {% endif %}
                    <div class="form-group">
                        <input type="text" class="form-control" name="_username" placeholder="Логин"/>
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" name="_password" placeholder="Пароль"/>
                    </div>

                    <input type="hidden" name="_target_path" value="/user" />
                    <button class="btn btn-success" type="submit">Вход</button>
                    <a href="{{ path('freelance_signup') }}" class="btn btn-primary ">Регистрация</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}